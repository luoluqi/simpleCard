/* card/redPackage/openRP/rpDetail.wxss */

.view_background{
  background-color: #fff;

}

.rp_record{
  float: right;
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 34rpx;
  color: rgb(60, 161, 225);
  display: block;
}


.receive_red_view{
  
  padding-bottom: 100rpx;
  text-align: center;
  display: block;
  clear: both;
  
}

.rp_user_img{
  width: 120rpx;
  height: 119rpx;
  margin-top: 30rpx;
  vertical-align: middle;
  border-radius:16rpx; 

}

.rp_type_image {
  width: 36rpx;
  height: 36rpx;
  margin-left: 6rpx;
  vertical-align: middle

}

.rp_nick_name{
  color: #000;
  font-size: 36rpx;
  font-weight: 400;
  display: inline-block;
}

.rp_description{
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #000;
  font-weight: 400;

}

.rp_receive_count{
  display: inline-block;
  color: rgb(51, 51, 51);
  font-size: 90rpx;
  font-weight: bold;
  margin-top: 30rpx;
}

.price_unit{
  font-size: 36rpx;
  margin-left: 20rpx;
  color: rgb(51, 51, 51)
}

.rp_had_save{
  margin-top: 30rpx;
  font-size: 28rpx;
  color: rgb(60, 161, 225);

}

.rp_situation{
  margin-left: 20rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  color: rgb(119, 119, 119);
  padding-bottom: 20rpx;
  
}

.rp_line{
  border-bottom: 1rpx solid #f0f0f0;
}

.receive_list_view{
  width: 100%;
  background-color: #fff;
  display: inline-block
}

.grp_user_image{
  width: 100rpx;
  height: 100rpx;
  margin-left:20rpx;
  border-radius:16em;
  vertical-align: middle

}

.left_view{
  margin: 20rpx 20rpx;
  display: inline-block;
  vertical-align: middle
}

.red_type_text{
  font-size: 34rpx;
  color: #000;
  font-weight: 400;
}

.red_time{
  margin-top: 10rpx;
  font-size: 28rpx;
  color: rgb(119, 119, 119);
}

.right_view{
  margin: 20rpx 20rpx;
  float: right;
  
}

.red_balance{
  text-align: right;
  font-size: 34rpx;
  color: #000;
  
}

.view_right_bottom{
  display: inline-block;
}

.img_huangguang{
  width: 28rpx;
  height: 23rpx;
  display: inline-block;
}

.red_status{
  display: inline-block;
  margin-top: 10rpx;
  font-size: 28rpx;
  color: rgb(255, 160, 90);
}

.line{
  margin: 0rpx 20rpx;
  border: 1rpx solid #f0f0f0;
}

.data_tip {
  text-align: center;
  padding: 20rpx 0;
  background-color: #f0f0f0;
}
