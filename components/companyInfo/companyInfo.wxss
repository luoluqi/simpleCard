/* components/companyInfo/companyInfo.wxss */
@import "/pages/card/index/index.wxss";
@import "/wxss/cardDetail.wxss";
@import "/wxss/pressStatus.wxss";
.title-img-1{
  width: 254rpx;
  height: 42rpx;
}
.the-title{
    padding-bottom: 23rpx;
}
.the-title > view{
    font-weight:bold;
}
.company-name{
    display: flex;
    justify-content: space-between;
}
.company-name image{
    width: 100rpx;
    height: 100rpx;
    border-radius:0 16rpx 16rpx 16rpx;
}
.company-name>view:nth-child(2) {
    width: 570rpx;
}
.company-name>view:nth-child(2)>view:nth-child(1) {
    font-size:34rpx;
    font-weight:bold;
    margin-bottom: 16rpx;
    vertical-align: top;
}
.company-name>view:nth-child(2)>view:nth-child(2) {
    font-size:26rpx;
    font-weight:400;
    color: #777777;
}
.line{
    padding: 0 16rpx;
}
.company-info-1{
    font-weight:400;
    font-size:26rpx;
    line-height:42rpx;
    color: #333333;
    overflow:hidden;
    transition:all 0.5s;
}
.company-info-1 text{
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.toggle{
    text-align: right;
    color: #3CA1E1;
    font-size:26rpx;
    margin-top: 27rpx;
}
.toggle text{
    vertical-align:middle;
    margin-right:16rpx;
}
.toggle image{
    width:16rpx;
    height:9rpx;
    vertical-align:middle;
}
.company-scale{
    font-size:26rpx;
    color:rgba(119,119,119,1);
    margin-bottom: 23rpx;
}