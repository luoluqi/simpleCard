/* my/pages/redRecord/redRecord.wxss */
page{
  height: 100%;
  background-color: #fff;
}

.view_background{
  background-color: #f0f0f0;

}

.receive_red{

  float: right;
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: rgb(60, 161, 225);
  display: block;
}

.my_red_view{
  padding-top:80rpx;
  padding-bottom: 100rpx;
  text-align: center;
  display: block;
  clear:both;
  box-shadow: 0 1rpx 0 0 rgba(0,0,0,0.3);
}

.user_img{
  width: 120rpx;
  height: 120rpx;
  margin-top: 30rpx;
  vertical-align: middle;
  border-radius: 16rpx;

}

.my_total_send{
  margin-top: 60rpx;
  color: rgb(0, 0, 0);
  font-size: 36rpx;
  font-weight: 400;
}

.send_count{
  
  color: rgb(0, 0, 0);
  font-size: 80rpx;
  font-weight: bold;
}

.price_unit{
  font-size: 36rpx;
  color: rgb(51, 51, 51)
}

.send_total_count{
  color: rgb(119, 119, 119);
  font-size: 40rpx;
}

.receive_list_view{
  width: 100%;
  background-color: #fff;
  display: inline-block
}

.left_view{
  margin: 20rpx 20rpx;
  display: inline-block
}

.red_type_text{
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  font-weight: 400;
}

.red_time{
  margin-top: 10rpx;
  font-size: 28rpx;
  color: rgb(119, 119, 119);
}

.right_view{
  margin: 20rpx 20rpx;
  float: right;
  
}

.red_balance{
  text-align: right;
  font-size: 34rpx;
  color: rgb(0, 0, 0);
  font-weight: 400;
  
}

.red_status{
  margin-top: 10rpx;
  font-size: 28rpx;
  color: rgb(119, 119, 119);
}

.line{
  border: 1rpx solid #f0f0f0;
}

.data_tip {
  text-align: center;
  padding: 20rpx 20rpx;
  background-color: #fff;
}
