.the-title{font-size: 1.2em;vertical-align: top;padding: 0 0 30rpx 0;position: relative;}
.inline{display: inline-block;}
.cp-list{vertical-align: top;padding: 0rpx 0 0 30rpx;position: relative;}
.cp-item{background: #a3a3a3;color: #fff;border-radius: 16em;margin: 0 0 20rpx 20rpx;padding: 3rpx 20rpx;display: inline-block;font-size: 22rpx;}
.xiaoguo{display: inline-block;vertical-align: middle;margin:0 55rpx 0 25rpx;}
.xiaoguo-img-p{position: relative;}
.xiaoguo-img{width: 124rpx;height:138rpx;}
.xiaoguo-desc{position:absolute;
top:33rpx;
left:39rpx;
