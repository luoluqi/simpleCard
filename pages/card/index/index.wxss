.company-name{font-size: 1.1em;padding: 0 0 5rpx 0;}
.com-text{display: inline-block;border-bottom: 1rpx solid #000;}
.fuli-item{background: #fff;margin: 20rpx 0 0 0;border-radius: 15rpx;box-shadow: 0 0 5rpx 0 #ccc;position: relative;}
