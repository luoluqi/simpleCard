.say-head{width: 76rpx;height: 76rpx;border-radius: 50%;background: #ccc;vertical-align: middle;display: inline-block;}
.say-info{display: inline-block;vertical-align: middle;width: 390rpx;padding: 0 0 0 15rpx;}
.name-job-p{display: inline-block;vertical-align:bottom;margin: 0 10rpx 0 0;width: 300rpx;overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}
.say-name{display: inline-block;vertical-align:bottom;margin: 0 10rpx 0 0;font-size: 26rpx;}
.say-job{display: inline-block;vertical-align: bottom;color: #777;font-size: 22rpx;}
.say-company-p{color: #777;font-size: 22rpx;}
.say-company{width: 380rpx;display: inline-block;vertical-align: middle;overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;}
.middle{display: inline-block;vertical-align: middle;}
.ypjia{display: inline-block;vertical-align: bottom;font-size: 22rpx;color: #777;padding: 0 0 0 10rpx;}

.renmai-item{padding: 20rpx 0;border-bottom: 1rpx solid #e2e2e2;position: relative;}
.renmai-item:last-child{border-bottom:none;}
.renmai-head{width: 80rpx;height: 80rpx;border-radius: 50%;display: inline-block;vertical-align: middle;background: #ccc;margin: 0 15rpx;}
.renmai-info{display: inline-block;vertical-align: middle;}
.renmai-name{display: inline-block;padding:0 15rpx 0 0;}
.renmai-job{color: #777777;font-size: 0.8em;}
.renmai-company{color: #777777;margin: 15rpx 0 0 0;font-size: 0.8em;}
.create-btn{text-align: center;color: #fff;background: #46a8e6;padding: 20rpx 0;margin:40rpx 0;border-radius: 40rpx;}
.mask{position: absolute;top:0;left: 0;width:730rpx;
height:410rpx;
border-radius:10rpx;
display:block;
}

.bsdd{padding:0rpx 0 0rpx 0;position: fixed;width: 100%;bottom: 25rpx;}
.ewm-p{background: #fff;position: absolute;right:-10rpx;top:60rpx;padding:15rpx 15rpx 15rpx 30rpx;border-radius: 30rpx 0 0 30rpx;}
.wem-img{width:110rpx;height:110rpx;display: block;position: absolute;right:-10rpx;top:-110rpx;z-index: 100;}
.qrcode-mask{position: fixed;z-index:200;top: 0;left: 0;right: 0;bottom: 0;background: rgba(0,0,0,0.5);display: flex;justify-content:center;flex-direction:column; align-items:center;}

.qrcode-p{width:620rpx;height: 946rpx;border-radius: 10rpx;background: #fff;display: inline-block;vertical-align: middle;position: relative;margin:120rpx 0 0 0;}
.qrcode-close{position: absolute;right: 0;top: 0;padding: 30rpx;width: 30rpx;height: 30rpx;}
.qrcode-head{height: 146rpx;width: 146rpx;border-radius: 50%;}
.qrcode-title{padding: 35rpx 25rpx;font-size: 1.5em;}
.qrcode-com{padding: 0 0 18rpx 0;color: #777;font-size: 28rpx;}
 .qrcode-job{padding: 0 0 18rpx 0;color: #777;font-size: 28rpx;}
 .qrcode-img{width: 210rpx;height: 210rpx;margin: 45rpx 0;display: inline-block;}
 .qrcode-desc{color: #777;padding:0 0 40rpx 0;font-size: 28rpx;}
 .qrcode-save{display: inline-block;width: 360rpx;color: #fff;height: 70rpx;line-height: 70rpx;border-radius: 10rpx;background: #40a4e3;font-size: 32rpx;text-align: center;position: absolute;bottom: 20rpx;left: 50%;transform: translateX(-50%);}
 .first-char{width:80rpx;
