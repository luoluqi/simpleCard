.mbsl{width:160rpx;color: #fff;background: #3ba1e1;text-align: center;position: absolute;top: 0;left: 20rpx;padding: 8rpx 0;border-radius: 0 0 0 20rpx;font-size: 0.8em;}
.peo-info{padding: 36rpx 30rpx;background: #fff;position: relative;}
