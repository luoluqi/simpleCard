  width: 100%;
  height: 150rpx;
  text-align: center;
  position: fixed;
  bottom: 0rpx;
  z-index: 99;
  background: #fff;
  box-shadow: 0 0 15rpx 0 rgba(0,0,0,0.3);

}

.left_image {
  margin-right: 10rpx;
  width: 49rpx;
  height: 40rpx;
}

.renew_identify {
  width: 45%;
  float: left;
