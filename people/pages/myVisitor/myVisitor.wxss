/* people/myVisitor/myVisitor.wxss */

page {
  height: 100%;
  background: #f0f0f0;
}

.alphabetical-order {
  height: calc(100% - 175rpx);
  position: relative;
  background-color: #f0f0f0;
}

.data-list {
  height: 100%;
  position: relative;
}

.letter-tag {
  background-color: #f0f0f0;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 15rpx 30rpx;
  color: rgb(51, 51, 51);
}

/* border-bottom: 1rpx solid rgb(233, 233, 233); */

.msg-item {
  height: 140rpx;
  margin: 2rpx;
  position: relative;
  left: 0;
  top: 0;
  overflow: hidden;
}

.msg {
  width: 100%;
  height: 140rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background-color: #fff;
}

.msg-item:active {
  background-color: #f9f9f9;
}

.header-img {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 20rpx;
  top: 20rpx;
  border-radius: 16em;
}

.text_header_view {
  position: absolute;
  width: 100rpx;
  height: 100rpx;
  left: 20rpx;
  top: 20rpx;
  border-radius: 16em;
  background-color: #a0a0a0;
  text-align: center;
}

.text_header {
  width: 100rpx;
  height: 100rpx;
  padding-top: 5rpx;
  color: #fff;
  font-size: 46rpx;
}

.text_header::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.top_text_view {
  position: absolute;
  left: 140rpx;
  top: 26rpx;
  display: inline-block;
}

.user-name {
  font-size: 34rpx;
  color: #000;
  font-weight: 400;
  display: inline-block;
}

.position_text {
  margin-left: 16rpx;
  font-size: 28rpx;
  color: rgb(119, 119, 119);
  width: 300rpx;
  margin-bottom: 2rpx;

  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: bottom;
  
}

.msg-text {
  position: absolute;
  left: 140rpx;
  bottom: 25rpx;
  font-size: 28rpx;
  color: rgb(119, 119, 119);

  width: 560rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  vertical-align: bottom;
}

.divide-line {
  margin: 0 0 0 110rpx;
  height: 1px;
  width: 95%;
  position: absolute;
  z-index: 10;
  background-color: #f0f0f0;
}

.data_tip {
  text-align: center;
  padding: 20rpx 0;
  margin: 0 20rpx;
}

/*空頁面展示*/

.view_null {
  
  position: relative;

}

.view_middle {
  
  position: absolute;
  top: 380rpx; 
  text-align: center;
  width: 100%;
}

.view_null_image {
  width: 223rpx;
  height: 178rpx;
  margin-top: 80rpx;
  margin-bottom: 30rpx;
}

.view_null_text {
  font-size: 26rpx;
  text-align: center;
  color: rgb(119, 119, 119);
}

.view_null_btn {
  width: 690rpx;
  margin-top: 20rpx;
  padding: 25rpx 0;
  background-color: rgb(60,161,225);
  color: white;
  font-size: 32rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
  position: fixed;
  bottom: 20rpx;
}

.null_image {
  margin-right: 10rpx;
  width: 49rpx;
  height: 40rpx;
}

/**蓝色按钮点击态*/
.btn-press {
  background-color: #3796d2;
}


/**栏目 点击态*/
.btn-press-item {
  background-color: #f9f9f9;
  border: 1rpx solid #f9f9f9;
}