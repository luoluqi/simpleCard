/* people/peopleWelfare/peopleWelfare.wxss */

page {
  height: 100%;
  background: #f0f0f0;
}

.alphabetical-order {
  width: 100%;
  height: calc(100% - 175rpx);
  position: relative;
  background-color: #f0f0f0;
}

.data-list {
  width: 100%;
  /* height: 85%; */
  background-color: #f0f0f0;
}

.letter-tag {
  background-color: #f0f0f0;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 15rpx 30rpx;
  color: rgb(51, 51, 51);
}

/* border-bottom: 1rpx solid rgb(233, 233, 233); */

.msg-item {
  height: 140rpx;
  margin: 2rpx;
  position: relative;
  left: 0;
  top: 0;
  overflow: hidden;
}

.msg {
  width: 100%;
  height: 140rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background-color: #fff;
}

.msg-item:active {
  background-color: #f9f9f9;
}

.head_view {
  position: relative;
  display: inline-block;
}

.header-img {
  width: 100rpx;
  height: 100rpx;
  margin: 22rpx 0 0 20rpx;
  border-radius: 16em;
}

.text_header_view {
  width: 100rpx;
  height: 100rpx;
  margin: 22rpx 0 0 20rpx;
  border-radius: 16em;
  background-color: #a0a0a0;
  text-align: center;
}

.text_header {
  width: 100rpx;
  height: 100rpx;
  padding-top: 5rpx;
  color: #fff;
  font-size: 46rpx;
}

.text_header::before {
  content: "";
  display: inline-block;
  height: 100%;
  vertical-align: middle;
}

.head_right_bottom_img {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  bottom: 0;
  left: 100rpx;
}

/* .header-img {
  position: absolute;
  width: 80rpx;
