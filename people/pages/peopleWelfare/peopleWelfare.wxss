.receive_text {
  color: #fff;
  width: 100rpx;
  height: 56rpx;
  padding: 10rpx 30rpx 10rpx 30rpx;
  background-color: rgb(5, 144, 242);
  border-radius: 8rpx;
}

/* .right_text {
  font-size: 25rpx;
  color: rgb(119, 119, 119);
  margin-right: 16rpx;
} */

.divide-line {
  margin: 0 0 0 110rpx;
  height: 1px;
  width: 95%;
  position: absolute;
  z-index: 10;
  background-color: #f0f0f0;
}

.data_tip {
  text-align: center;
  padding: 20rpx 0;
  margin: 0 20rpx;
}

/*空頁面展示*/

.view_null {
  position: relative;
}

.view_middle {
  position: absolute;
  top: 380rpx;
  text-align: center;
  width: 100%;
}

.view_null_image {
  width: 223rpx;
  height: 178rpx;
  margin-bottom: 30rpx;
}

.view_null_text {
  font-size: 26rpx;
  text-align: center;
  color: rgb(119, 119, 119);
}

.view_null_btn {
  width: 690rpx;
  margin-top: 30rpx;
  padding: 25rpx 0;
  background-color: rgb(60, 161, 225);
  color: white;
  font-size: 36rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-left: 30rpx;
  position: fixed;
  bottom: 20rpx;
}

.find_welfare_text-p {
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 0rpx;
  padding: 20rpx 0;
  z-index: 100;
  background: #fff;
  box-shadow: 0 0 15rpx 0 rgba(0, 0, 0, 0.3);
}

.find_welfare_text {
  width: 690rpx;
  padding: 25rpx 0;
  display: inline-block;
  font-size: 36rpx;
  color: rgb(255, 255, 255);
  border-radius: 10rpx;
  background-color: rgb(60, 161, 225);
}

/**蓝色按钮点击态*/

.btn-press {
  background-color: #3796d2;
}

/**栏目 点击态*/

.btn-press-item {
  background-color: #f9f9f9;
  border: 1rpx solid #f9f9f9;
}

