/* 搜索框样式 */
.search{
  height:60rpx;
  margin: 20rpx 10rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;

  border:1rpx solid #e3e3e3;
  background-color: #fff;
  border-radius: 16rpx;

}

/* 搜索框小图标 */
.image_search{ 
  width:28rpx;
  height:28rpx;
  padding:0 20rpx;
}

/* 搜索框提示文字样式 */
.keyword_input{
  float: left;
  font-size:26rpx;
  color: rgb(51, 51, 51);
  font-weight: 400;
}

/* 搜索框小图标 */
.image_del{ 
  width:20rpx;
  height:20rpx;
  position: absolute;
  float: right;
  right:20rpx;

}

/*===内容展示begin===*/
.background_view {
  border: 1px solid #f0f0f0; 
  background: #fff;
}

.msg-item {
  /* position: relative; */
