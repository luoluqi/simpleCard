  padding-top: 20rpx;

}

.msg-item:active{
   background: #f9f9f9;
}


.header-img {
  width: 100rpx;
  height: 100rpx;
  vertical-align: middle;
  text-align: center;
  line-height: 100rpx;
 
  border-radius: 16em;
  display: inline-block;
}

